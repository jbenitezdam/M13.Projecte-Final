<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!---Linear que sirve como titulo.-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:gravity="right"
        android:background="@color/colorBase"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="150dp"
            android:text="@string/mainmenu"
            android:textSize="7dp"
            android:textColor="@color/White"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/openmenu"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:drawableBottom="@drawable/menu"
            android:background="@color/colorBase"
            android:title="OpenMenu"
            android:onClick="showPopup" />

    </LinearLayout>

    <!---Linear que sirve como titulo en la parte inferior.-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:background="@drawable/shapebase"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="-10dp"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/businessName"
                    android:textColor="@color/White"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/White"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtlocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/location"
                    android:textColor="@color/White"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/White"
                    android:textSize="16dp" />

                <ImageButton
                    android:id="@+id/searchLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/ic_search"
                    android:textColor="@color/White"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtfirstCat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/firstcat"
                    android:textColor="@color/White"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/firstCat"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/White"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtsecondCat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/secondcat"
                    android:textColor="@color/White"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/secondCat"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/White"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtthirdCat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/thirdcat"
                    android:textColor="@color/White"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/thirdCat"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"

                    android:textColor="@color/White"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/price"
                    android:textColor="@color/White"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/White"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/description"
                    android:textColor="@color/White"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/White"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/create"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/colorBase"
                    android:text="Create"
                    android:textColor="@color/White"
                    android:textSize="16dp" />


            </LinearLayout>
        </ScrollView>


    </RelativeLayout>

    <!---Linear que sirve como titulo en la parte inferior.-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorBase"
        android:orientation="vertical">

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp" />

    </LinearLayout>

</LinearLayout>