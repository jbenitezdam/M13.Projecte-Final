<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!---Linear que sirve como titulo.-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="right"
        android:background="@color/colorBase"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="280dp"
            android:text="@string/profile"
            android:textSize="18dp"
            android:textColor="@color/White"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/openmenu"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:drawableBottom="@drawable/menu"
            android:background="@color/colorBase"
            android:title="OpenMenu"
            android:onClick="showPopup" />

    </LinearLayout>

    <!---Linear que sirve como titulo en la parte inferior.-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@color/White"
        android:orientation="vertical"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/shapebase"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/imgusuariopaginainicio"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="William Snow"
                android:textColor="#fff"
                android:textSize="21dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Rank:"
                android:textColor="#fff"
                android:textSize="21dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="-65dp"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="120dp">

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:paddingLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:text="@string/description"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_email_black_24dp"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="smxjbenitez@gmail.com"
                android:paddingLeft="20dp"
                />

        </LinearLayout>
        <LinearLayout
        android:paddingLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:text="@string/description"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_local_phone_black_24dp"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+34972623040
"
            android:paddingLeft="20dp"
            />

    </LinearLayout>

        <LinearLayout
            android:paddingLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:text="@string/description"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_location_on_black_24dp"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Begur, Girona, Spain."
                android:paddingLeft="20dp"
                />

        </LinearLayout>

    </LinearLayout>

    <!---Linear que sirve como titulo en la parte inferior.-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBase"
        android:orientation="vertical">

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp" />

    </LinearLayout>

</LinearLayout>