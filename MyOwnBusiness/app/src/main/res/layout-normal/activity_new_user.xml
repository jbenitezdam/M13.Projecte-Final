<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!---Linear que sirve como titulo.-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBase"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/register"
            android:textColor="@color/White"
            android:textSize="18dp" />

    </LinearLayout>

    <!---Linear que sirve como titulo en la parte inferior.-->

    <!---Linear que sirve como titulo en la parte inferior.-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:background="@drawable/shapebase"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/businessName"
            android:textColor="@color/White"
            android:textSize="20dp" />

        <EditText
            android:layout_marginRight="30dp"
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/White"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtpasswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/passwd"
            android:textColor="@color/White"
            android:textSize="20dp" />

        <EditText
            android:layout_marginRight="30dp"
            android:id="@+id/passwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/White"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/emailaddres"
            android:textColor="@color/White"
            android:textSize="20dp" />

        <EditText
            android:layout_marginRight="30dp"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/White"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtaccountname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/accountname"
            android:textColor="@color/White"
            android:textSize="20dp" />

        <EditText
            android:layout_marginRight="30dp"
            android:id="@+id/accountname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/White"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtbirthdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/birth"
            android:textColor="@color/White"
            android:textSize="20dp" />

        <EditText
            android:layout_marginRight="30dp"
            android:id="@+id/birthdate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/White"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/addres"
            android:textColor="@color/White"
            android:textSize="20dp" />

        <EditText
            android:layout_marginRight="30dp"
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/White"
            android:textSize="16dp" />

        <Button
            android:layout_marginRight="30dp"
            android:id="@+id/create"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Create"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circlebutton"
            android:textColor="@color/White"
            android:layout_marginBottom="20dp"
            android:textSize="16dp"/>


    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBase"
        android:orientation="vertical">
        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp" />

    </LinearLayout>

</LinearLayout>