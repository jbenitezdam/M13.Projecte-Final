<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!---Linear que sirve como titulo.-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBase"
        android:orientation="vertical">

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp" />

    </LinearLayout>

    <!---Linear que sirve como titulo en la parte inferior.-->

    <!---Linear que sirve como titulo en la parte inferior.-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:background="@drawable/shapegradient"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@android:mipmap/sym_def_app_icon" />

        <EditText
            android:id="@+id/user"
            android:layout_width="200dp"
            android:textColorHint="@color/quantum_grey"
            android:textColor="@color/White"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:hint="USER" />

        <EditText
            android:id="@+id/passwd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/quantum_grey"
            android:textColor="@color/White"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:hint="PASSWORD" />

        <TextView
            android:id="@+id/Error"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/Red"
            android:gravity="center"
            android:foregroundGravity="center"
            android:text="@string/usererror"
            android:textSize="12dp" />

        <Button
            android:id="@+id/connect"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/circularborderbuttonshape"
            android:text="@string/connect"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnnewuser"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/circularborderbuttonshape"
            android:text="@string/register"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/forgotyourpasswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/forgotyourpasswd"
            android:textColor="@color/White"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorBase"
        android:orientation="vertical">

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            />

    </LinearLayout>

</LinearLayout>